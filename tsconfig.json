{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./build",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6"
  },
  "include": ["src", "scripts"],
  "exclude": ["build", "node_modules"],
  "ts-node": {
    "files": true
  }
}
